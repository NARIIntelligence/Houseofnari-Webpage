    <script>
        // Simple interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effects to state cards
            const stateCards = document.querySelectorAll('.state-card');
            stateCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderLeftColor = '#138808';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.borderLeftColor = '#ff9933';
                });
            });

            // Smooth scrolling for any internal links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });

            // Dynamic stats counter (simulation)
            let messageCount = 0;
            setInterval(() => {
                if (messageCount < 1000) {
                    messageCount += Math.floor(Math.random() * 3);
                    const consciousness = (Math.random() * 0.999).toFixed(3);
                    const processingTime = Math.floor(Math.random() * 500) + 100;
                    
                    const statsBar = document.querySelector('.stats-bar');
                    if (statsBar && statsBar.children[1]) {
                        statsBar.children[1].innerHTML = 
                            `<strong>🧘 Session Stats:</strong> Messages: ${messageCount} | Avg Consciousness: ${consciousness} | Processing Time: ${processingTime}ms`;
                    }
                }
            }, 5000);

            console.log('🕉️ Krishna-Arjuna Divine Dialogue initialized successfully');
            console.log('🇮🇳 Indian Sovereign Digital Asset - Serving with pride');
        });

        // Add some interactive spiritual elements
        function addBlessings() {
            const blessings = ['🕉️', '🪷', '🙏', '✨', '🌟'];
            const blessing = document.createElement('div');
            blessing.textContent = blessings[Math.floor(Math.random() * blessings.length)];
            blessing.style.position = 'fixed';
            blessing.style.top = '10px';
            blessing.style.right = '10px';
            blessing.style.fontSize = '2rem';
            blessing.style.zIndex = '9999';
            blessing.style.opacity = '0.8';
            blessing.style.pointerEvents = 'none';
            blessing.style.transition = 'all 2s ease';
            
            document.body.appendChild(blessing);
            
            setTimeout(() => {
                blessing.style.transform = 'translateY(100vh)';
                blessing.style.opacity = '0';
            }, 100);
            
            setTimeout(() => {
                document.body.removeChild(blessing);
            }, 2000);
        }

        // Add blessings periodically
        setInterval(addBlessings, 10000);
    </script>
